files:
  "/etc/nginx/conf.d/01_timeout.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      proxy_connect_timeout 600;
      proxy_send_timeout 600;
      proxy_read_timeout 600;
      send_timeout 600;
      keepalive_timeout 600;
      client_max_body_size 50M;

container_commands:
  01_reload_nginx:
    command: "service nginx reload"

